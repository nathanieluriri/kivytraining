Scroller_Func:
<Scroller_Func@ScrollView>:
    bar_margin: 10# distance from the bar to the edge of the screen
    bar_width: 10 # the width of the bar
    bar_color: .3,.6,.9,.5 # the color of the bar when it is scrolled
    bar_inactive_color: .1,.9,.6,.3 # the color of the bar when it is inactive
    StackInterface:
        size_hint: 1,None
        height: self.minimum_height




<StackInterface>:
    padding: 10
    spacing: 20




<Interface>:
    #"left", "right","center"
    anchor_x: 'center'
    # "top", 'center', "bottom"
    anchor_y: 'center'
    GridLayout

        cols: 2
        size_hint: .25,.25
        Button:
            text: '1'
            size_hint: None,None
            size: 200,50
            background_color:(.3,.4,.8,.9)
        Button:
            text: '2'
            size_hint: None,None
            size: 200,50

            background_color : (.3,.4,.9,1)
        Button:
            text: '3'
            size_hint: None,None
            size: 200,50
            background_color: (.6,.3,.8,.8)

        Button:
            text: '4'
            size_hint: None,None
            size: 200,50
            background_color: (.7,.3,.8,1)





